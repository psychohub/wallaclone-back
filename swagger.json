{
  "openapi": "3.0.0",
  "info": {
    "title": "Wallaclone API",
    "version": "1.0.0",
    "description": "API para la aplicación Wallaclone"
  },

  "paths": {
    "/api/auth/register": {
      "post": {
        "summary": "Registrar un nuevo usuario",
        "tags": ["Autenticación"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["nombre", "email", "contraseña"],
                "properties": {
                  "nombre": {
                    "type": "string",
                    "description": "Nombre de usuario"
                  },
                  "email": {
                    "type": "string",
                    "format": "email",
                    "description": "Correo electrónico del usuario"
                  },
                  "contraseña": {
                    "type": "string",
                    "description": "Contraseña del usuario"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Usuario registrado exitosamente",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "token": {
                      "type": "string"
                    },
                    "userId": {
                      "type": "string"
                    },
                    "name": {
                      "type": "string"
                    },
                    "email": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Error de validación"
          },
          "500": {
            "description": "Error del servidor"
          }
        }
      }
    },
    "/api/auth/login": {
      "post": {
        "summary": "Iniciar sesión de usuario",
        "tags": ["Autenticación"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["nombre", "contraseña"],
                "properties": {
                  "nombre": {
                    "type": "string",
                    "description": "Nombre de usuario"
                  },
                  "contraseña": {
                    "type": "string",
                    "description": "Contraseña del usuario"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Inicio de sesión exitoso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean"
                    },
                    "token": {
                      "type": "string"
                    },
                    "usuario": {
                      "type": "object",
                      "properties": {
                        "id": {
                          "type": "string"
                        },
                        "nombre": {
                          "type": "string"
                        },
                        "email": {
                          "type": "string"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Error de validación"
          },
          "401": {
            "description": "Credenciales inválidas"
          },
          "500": {
            "description": "Error del servidor"
          }
        }
      }
    },
    "/api/users/recuperar-contrasena": {
      "post": {
        "summary": "Recupera la contraseña de usuario existente",
        "tags": ["Users"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["email"],
                "properties": {
                  "email": {
                    "type": "string",
                    "format": "email",
                    "description": "Correo electrónico del usuario"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Peticion de recuperar contraseña correcta",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/users/restablecer-contrasena": {
      "post": {
        "summary": "Reestablece la contraseña de un usuario existente",
        "tags": ["Users"],
        "parameters": [
          {
            "name": "token",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["contraseña"],
                "properties": {
                  "contraseña": {
                    "type": "string",
                    "format": "password",
                    "description": "Nueva contraseña"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Peticion de recuperar contraseña correcta",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/users/actualizar-contrasena": {
      "put": {
        "summary": "Endpoint para cambiar la contraseña de un usuario ya logueado",
        "tags": ["Users"],
        "security": {
          "bearerAuth": ["Authorization"]
        },
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["oldPass", "newPass"],
                "properties": {
                  "oldPass": {
                    "type": "string",
                    "format": "password",
                    "description": "Antigua contraseña"
                  },
                  "newPass": {
                    "type": "string",
                    "format": "password",
                    "description": "Nueva contraseña"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Cambio de contraseña exitoso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Error en la validacion de la nueva contraseña",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Usuario no encontrado",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/anuncios": {
      "get": {
        "summary": "Obtener todos los anuncios",
        "tags": ["Anuncios"],
        "parameters": [
          {
            "name": "page",
            "in": "query",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 1
            },
            "description": "Número de página para la paginación"
          },
          {
            "name": "limit",
            "in": "query",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 12
            },
            "description": "Número de anuncios por página"
          },
          {
            "name": "nombre",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string"
            },
            "description": "Filtrar por nombre de artículo (búsqueda parcial, insensible a mayúsculas/minúsculas)"
          },
          {
            "name": "tag",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string"
            },
            "description": "Filtrar por tag (una palabra clave)"
          },
          {
            "name": "minPrecio",
            "in": "query",
            "required": false,
            "schema": {
              "type": "number"
            },
            "description": "Precio mínimo"
          },
          {
            "name": "maxPrecio",
            "in": "query",
            "required": false,
            "schema": {
              "type": "number"
            },
            "description": "Precio máximo"
          },
          {
            "name": "tipoAnuncio",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string",
              "enum": ["venta", "búsqueda"]
            },
            "description": "Filtrar por tipo de anuncio (venta o búsqueda)"
          },
          {
            "name": "sort",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string",
              "enum": ["asc", "desc"],
              "default": "desc"
            },
            "description": "Ordenar por fecha de publicación (asc: ascendente, desc: descendente)"
          }
        ],
        "responses": {
          "200": {
            "description": "Lista de anuncios obtenida exitosamente",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "anuncios": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/Anuncio"
                      }
                    },
                    "total": {
                      "type": "integer"
                    },
                    "page": {
                      "type": "integer"
                    },
                    "totalPages": {
                      "type": "integer"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Usuario no encontrado"
          },
          "500": {
            "description": "Error del servidor"
          }
        }
      }
    },
    "/api/anuncios/user/{nombreUsuario}": {
      "get": {
        "summary": "Obtener anuncios de un usuario específico",
        "tags": ["Anuncios"],
        "parameters": [
          {
            "name": "nombreUsuario",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Nombre de usuario del miembro"
          },
          {
            "name": "page",
            "in": "query",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 1
            },
            "description": "Número de página para la paginación"
          },
          {
            "name": "limit",
            "in": "query",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 12
            },
            "description": "Número de anuncios por página"
          },
          {
            "name": "nombre",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string"
            },
            "description": "Filtrar por nombre de artículo (búsqueda parcial, insensible a mayúsculas/minúsculas)"
          },
          {
            "name": "tag",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string"
            },
            "description": "Filtrar por tag (una palabra clave)"
          },
          {
            "name": "minPrecio",
            "in": "query",
            "required": false,
            "schema": {
              "type": "number"
            },
            "description": "Precio mínimo"
          },
          {
            "name": "maxPrecio",
            "in": "query",
            "required": false,
            "schema": {
              "type": "number"
            },
            "description": "Precio máximo"
          },
          {
            "name": "tipoAnuncio",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string",
              "enum": ["venta", "búsqueda"]
            },
            "description": "Filtrar por tipo de anuncio (venta o búsqueda)"
          },
          {
            "name": "sort",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string",
              "enum": ["asc", "desc"],
              "default": "desc"
            },
            "description": "Ordenar por fecha de publicación (asc: ascendente, desc: descendente)"
          }
        ],
        "responses": {
          "200": {
            "description": "Lista de anuncios del usuario obtenida exitosamente",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "anuncios": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/Anuncio"
                      }
                    },
                    "total": {
                      "type": "integer"
                    },
                    "page": {
                      "type": "integer"
                    },
                    "totalPages": {
                      "type": "integer"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Usuario no encontrado"
          },
          "500": {
            "description": "Error del servidor"
          }
        }
      }
    },
    "/api/users/{id}": {
      "delete": {
        "summary": "Eliminar cuenta de usuario",
        "tags": ["Users"],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Cuenta de usuario eliminada con éxito"
          },
          "401": {
            "description": "No autorizado"
          },
          "404": {
            "description": "Usuario no encontrado"
          },
          "500": {
            "description": "Error del servidor"
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      }
    },
    "/api/anuncios/item/{slug}": {
      "get": {
        "summary": "Obtener el detalle de un anuncio específico",
        "tags": ["Anuncios"],
        "parameters": [
          {
            "name": "slug",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Slug del anuncio"
          }
        ],
        "responses": {
          "200": {
            "description": "Detalle de un anuncio obtenido exitosamente",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "result": {
                      "type": "object",
                      "$ref": "#/components/schemas/Anuncio"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Usuario no encontrado"
          },
          "500": {
            "description": "Error del servidor"
          }
        }
      }
    },
    "/api/anuncios/item": {
      "post": {
        "tags": ["Anuncios"],
        "summary": "Crear un nuevo anuncio",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "nombre": { "type": "string" },
                  "descripcion": { "type": "string" },
                  "tipoAnuncio": { "type": "string", "enum": ["venta", "búsqueda"] },
                  "precio": { "type": "number" },
                  "tags": { "type": "array", "items": { "type": "string" } },
                  "imagen": { "type": "string", "format": "binary" }
                },
                "required": ["nombre", "descripcion", "tipoAnuncio", "precio", "imagen"]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Anuncio creado exitosamente",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Anuncio"
                }
              }
            }
          },
          "400": { "description": "Datos inválidos" },
          "401": { "description": "No autorizado" },
          "500": { "description": "Error del servidor" }
        }
      }
    },
    "/api/anuncios/item/{id}": {
  "put": {
    "tags": ["Anuncios"],
    "summary": "Editar un anuncio existente",
    "security": [{ "bearerAuth": [] }],
    "parameters": [
      {
        "in": "path",
        "name": "id",
        "required": true,
        "schema": {
          "type": "string"
        },
        "description": "ID del anuncio a editar"
      }
    ],
    "requestBody": {
      "content": {
        "multipart/form-data": {
          "schema": {
            "type": "object",
            "properties": {
              "nombre": { "type": "string" },
              "descripcion": { "type": "string" },
              "tipoAnuncio": { "type": "string", "enum": ["venta", "búsqueda"] },
              "precio": { "type": "number" },
              "tags": { 
                "type": "array", 
                "items": { "type": "string" },
                "description": "Lista de tags separados por comas"
              },
              "imagen": { "type": "string", "format": "binary" }
            }
          }
        }
      }
    },
    "responses": {
      "200": {
        "description": "Anuncio actualizado exitosamente",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "message": { "type": "string" },
                "anuncio": { "$ref": "#/components/schemas/Anuncio" }
              }
            }
          }
        }
      },
      "400": { "description": "Datos inválidos" },
      "401": { "description": "No autorizado" },
      "403": { "description": "Prohibido - No tienes permiso para editar este anuncio" },
      "404": { "description": "Anuncio no encontrado" },
      "500": { "description": "Error del servidor" }
    }
  }
},
    "/api/anuncios/delete/{anuncioId}": {
      "delete": {
        "summary": "Eliminar un anuncio específico",
        "tags": ["Anuncios"],
        "parameters": [
          {
            "name": "anuncioId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Id del anuncio"
          }
        ],
        "responses": {
          "200": {
            "description": "Anuncio eliminado correctamente"
          },
          "404": {
            "description": "Usuario no encontrado"
          },
          "500": {
            "description": "Error del servidor"
          }
        }
      }
    },
    "/api/anuncios/status": {
      "get": {
        "summary": "Listar los estados disponibles de los anuncios",
        "tags": ["Anuncios"],
        "responses": {
          "200": {
            "description": "Lista de los estados disponibles de los anuncios",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                }
              }
            }
          },
          "500": {
            "description": "Error del servidor"
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      }
    },
    "/api/anuncios/status/{anuncioId}": {
      "put": {
        "summary": "Cambiar el estado de un anuncio específico",
        "tags": ["Anuncios"],
        "parameters": [
          {
            "name": "anuncioId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Id del anuncio"
          }
        ],
        "responses": {
          "200": {
            "description": "Estado del anuncio actualizado correctamente"
          },
          "400": {
            "description": "Error en el envío de los parámetros"
          },
          "403": {
            "description": "Acceso prohibido"
          },
          "500": {
            "description": "Error del servidor"
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      }
    },
    "/api/users/actualizar-datos": {
      "put": {
        "summary": "Endpoint para cambiar el nombre de usuario y/o el email",
        "tags": ["Users"],
        "security": {
          "bearerAuth": ["Authorization"]
        },
        "requestBody": {
          "required": false,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["name", "email"],
                "properties": {
                  "name": {
                    "type": "string",
                    "format": "text",
                    "description": "Nuevo nombre"
                  },
                  "email": {
                    "type": "string",
                    "format": "text",
                    "description": "Nuevo email"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Datos actualizados correctamente",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Email y contraseña invalidos",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Usuario no encontrado",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "409": {
            "description": "El email o nombre de usuario ya está en uso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/chat": {
      "post": {
        "tags": ["Chat"],
        "summary": "Guardar un mensaje en el chat",
        "description": "Guarda un mensaje en el chat asociado a un anuncio",
        "security": [{"bearerAuth": []}],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "anuncioId": {
                    "type": "string",
                    "description": "ID del anuncio asociado al chat"
                  },
                  "contenido": {
                    "type": "string",
                    "description": "Contenido del mensaje"
                  }
                },
                "required": ["anuncioId", "contenido"]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Mensaje guardado exitosamente",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    },
                    "chat": {
                      "type": "object",
                      "properties": {
                        "_id": {
                          "type": "string"
                        },
                        "anuncio": {
                          "type": "string"
                        },
                        "participantes": {
                          "type": "array",
                          "items": {
                            "type": "string"
                          }
                        },
                        "mensajes": {
                          "type": "array",
                          "items": {
                            "type": "object",
                            "properties": {
                              "emisor": {
                                "type": "string"
                              },
                              "contenido": {
                                "type": "string"
                              },
                              "fechaEnvio": {
                                "type": "string",
                                "format": "date-time"
                              }
                            }
                          }
                        },
                        "fechaCreacion": {
                          "type": "string",
                          "format": "date-time"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Error de solicitud"
          },
          "401": {
